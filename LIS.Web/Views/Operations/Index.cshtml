@using مشروع_ادار_المختبرات.DTOS
@model IEnumerable<DTOShowOperations>

@{
    ViewData["Title"] = "إدارة المرضى";
}
<style>
    .square-btn {
    width: 120px;       
    height: 40px;      
    font-size: 0.85rem; 
    font-weight: 600;   
    white-space: nowrap; 
}

</style>
<div class="container mt-5" dir="rtl">
    <!-- عنوان الصفحة وزر إضافة -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold mb-0">
            <i class="bi bi-people-fill me-2 text-primary"></i>
            عرض بيانات العمليات التي يقوم بها المستخدمين في النظام
        </h2>
    
    </div>
    

  
    <!-- شريط البحث -->
    <form asp-controller="Operations" asp-action="Index" method="get" class="mb-4">
        <div class="input-group input-group-sm shadow-sm">
            <input type="text" name="searchTerm" class="form-control text-end border-primary" placeholder="ابحث باسم المستخدم"
                   value="@Context.Request.Query["searchTerm"]" />
            <button class="btn btn-outline-primary" type="submit">
                <i class="bi bi-search"></i> بحث
            </button>
        </div>
    </form>

    <!-- جدول المرضى -->
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover align-middle text-center mb-0" style="font-size:small">
            <thead class="table-primary text-dark">
                <tr>
                    <th>رقم العمليه</th>
                    <th>اسم المستخدم</th>
                    <th>نوع العملية</th>
                    <th>مكان تنفيذ العمليه</th>
\                    <th>تاريخ اشاء العمليه </th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="9" class="text-muted text-center">لا توجد بيانات حالياً</td>
                    </tr>
                }
                else
                {
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td>@patient.OperationId</td>
                            <td>@patient.UserName</td>
                            <td>@patient.ActionType</td>
                            <td>@patient.TableName </td>
                            <td>@patient.ActionDate</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
