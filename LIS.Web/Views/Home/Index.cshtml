@using System.Security.Claims

@{
    ViewData["Title"] = "لوحة التحكم";
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
}

<!-- تأكد من وجود Bootstrap و Bootstrap Icons في _Layout.cshtml -->
<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">

    <!-- عنوان المختبر -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">نظام إدارة المختبرات الطبية</h1>
        <p class="text-muted fs-5">مرحباً بك في لوحة التحكم الرئيسية</p>
    </div>

    <!-- مربعات التحكم -->
    <div class="row row-cols-1 row-cols-md-1 row-cols-lg-1 g-4">

        @if (userRole == "مشرف")
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm text-center">
                    <div class="card-body">
                        <i class="bi bi-house-fill text-primary" style="font-size: 3rem;"></i>
                        <h5 class="card-title mt-3 fw-bold">الادارة</h5>
                        <p class="text-muted">ادراة النظام</p>
                        <a asp-controller="Users" asp-action="MainScreen" class="btn btn-outline-primary">الإدارة</a>
                    </div>
                </div>
            </div>
        }
       
         @if (userRole== "مخبري")
        {
            <!-- التحاليل -->
            <div class="col">
                <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-file-earmark-text-fill text-danger" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3 fw-bold">التحاليل</h5>
                    <p class="text-muted">عرض وإدارة نتائج التحاليل</p>
                    <a asp-controller="MainScreens" asp-action="Index" class="btn btn-outline-danger">عرض التحاليل</a>
                </div>
            </div>
        </div>
        }
         @if (userRole == "سكرتاري")
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                 <div class="col">
                <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-person text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3 fw-bold">   المرضى</h5>
                    <p class="text-muted">ادخال البيانات الاساسيه للمرضى</p>
                    <a asp-controller="Patient" asp-action="Create" class="btn btn-outline-success">اضافة المرضى</a>
                </div>
            </div>
          </div>
             <!-- المرضى -->
            <div class="col">
                <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-person-vcard text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3 fw-bold">اضافة طلبات</h5>
                    <p class="text-muted">عرض وإدارة  طلبات المرضى</p>
                    <a asp-controller="Patient" asp-action="Index" class="btn btn-outline-success">دخول</a>
                </div>
            </div>
          </div>
            <!-- السجلات الطبيه حق المرضى -->
            <div class="col">
                <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-file-earmark-text-fill btn-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3 fw-bold">سجلات المرضى</h5>
                    <p class="text-muted">عرض وإدارة السجلات الطبيه</p>
                    <a asp-controller="RecordPatients" asp-action="Index" class="btn btn-outline-danger">عرض السجلات</a>
                </div>
            </div>
           </div>
          
        </div>

        }
    </div>
</div>
