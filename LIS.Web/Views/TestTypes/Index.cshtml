@using APiUsers.DTOs.DTOSTests
@model List<DTOTest>

@{
    ViewData["Title"] = "إضافة التحاليل";
}

<h3>إضافة التحاليل</h3>

<!-- مربع عرض المجموع -->
<div class="mb-3">
    <label class="form-label fw-bold">إجمالي السعر:</label>
    <input type="text" id="totalPrice" class="form-control" readonly value="0" />
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="name" class="form-control"
               placeholder="ابحث باسم نوع التحليل"
               value="@Context.Request.Query["name"]" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> بحث
        </button>
    </div>
</form>

<form asp-action="CreateTest" method="post">
    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn btn-primary">حفظ الطلب</button>
    <a asp-controller="Patient" asp-action="Index" class="btn btn-secondary px-4 py-2 rounded-3">
            <i class="bi bi-box-arrow-left"></i> إغلاق النافذه
        </a>    <table class="table table-striped table-bordered container-sm mt-4">
        <thead class="thead-dark">
            <tr>
                <th>اختيار</th>
                <th>اسم التحليل (EN)</th>
                <th>نوع العينة</th>
                <th>التصنيف (EN)</th>
                <th>السعر</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="test-checkbox" name="selectedTestIds"  value="@Model[i].TestId" data-price="@Model[i].Testprice" />
                    </td>
                    <td>@Model[i].TestNameEn</td>
                    <td>@Model[i].SampleType</td>
                    <td>@Model[i].CategoryNameEn</td>
                    <td>@Model[i].Testprice</td>
                </tr>
            }
        </tbody>
    </table>
</form>

@section Scripts {
    <script>
        // وظيفة لحساب المجموع
        function calculateTotal() {
            let total = 0;
            document.querySelectorAll(".test-checkbox:checked").forEach(cb => {
                total += parseFloat(cb.getAttribute("data-price")) || 0;
            });
            document.getElementById("totalPrice").value = total.toFixed(2);
        }

        // إضافة الحدث عند التغيير
        document.querySelectorAll(".test-checkbox").forEach(cb => {
            cb.addEventListener("change", calculateTotal);
        });
    </script>
}
