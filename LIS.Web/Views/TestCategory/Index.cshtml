@model IEnumerable<مشروع_ادار_المختبرات.DTOS.DTOTestCategory>

@{
    ViewData["Title"] = "ShowData";
 }

<div class="container mt-4">

   
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold" style="direction: rtl;">
            <i class="bi bi-flask me-2"></i> قائمة أنواع الفئات
        </h2>
        <div asp-validation-summary="All"></div>
        <a asp-controller="TestCategory" asp-action="AddNewTestCategory" class="btn btn-success shadow-sm px-4 py-2">
            <i class="bi bi-plus-circle"></i> إضافة نوع الفئات
        </a>
    </div>

    <!-- نموذج البحث -->
    <form asp-action="Index" method="get" class="mb-4" style="direction: rtl;">
        <div class="input-group">
            <input type="text" name="name" class="form-control" placeholder="ابحث باسم نوع التحليل"
                   value="@Context.Request.Query["name"]" />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> بحث
            </button>
        </div>
    </form>

    <!-- جدول عرض أنواع العينات -->
    <div class="table-responsive shadow-sm rounded border" style="direction: rtl;">
        <table class="table table-hover align-middle mb-0 text-center">
            <thead class="table-dark">
                <tr>
                    <th style="width: 15%;">#</th>
                    <th>اسم نوع الفئة</th>
                    <th style="width: 20%;">Name Category</th>
                    <th style="width: 20%;">العمليات</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-muted">لا توجد بيانات لعرضها حالياً</td>
                    </tr>
                }
                else
                {
                    
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.CategoryNameAr</td>
                            <td>@item.CategoryNameEn</td>
                            <td>
                                <a asp-action="EditTestCategory" asp-controller="TestCategory" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-pencil-square"></i> تعديل
                                </a>
                                <form asp-action="DeleteTestCategory" asp-route-id="@item.CategoryId" method="post" class="d-inline" onsubmit="return confirm('هل أنت متأكد من حذف هذا المستخدم؟');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger ms-2">
                                        <i class="bi bi-trash-fill"></i> حذف
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
             <a asp-controller="Users"  asp-action="MainScreen"  class="btn btn-success">
            <i class="bi bi-plus-circle"></i>خروج
           </a>
        </table>
    </div>
</div>
