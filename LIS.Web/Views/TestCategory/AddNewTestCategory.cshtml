@model مشروع_ادار_المختبرات.DTOS.DTOAddCategoryTest

@{
    ViewData["Title"] = "إضافة نوع تحليل";
}

<h2 class="text-center">إضافة فئة  تحليل جديدة</h2>

<form asp-action="AddNewTestCategory" method="post" class="mt-4">
    <div class="form-group mb-3">
        <label asp-for="CategoryNameAr" class="form-label">اسم الفئة  بالعربي</label>
        <input asp-for="CategoryNameAr" class="form-control" />
        <span asp-validation-for="CategoryNameAr" class="text-danger"></span>
    </div>
     <div class="form-group mb-3">
        <label asp-for="CategoryNameEn" class="form-label">Category Name in English</label>
        <input asp-for="CategoryNameEn" class="form-control" />
        <span asp-validation-for="CategoryNameEn" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">حفظ</button>
    <a asp-action="ShowData" class="btn btn-secondary">رجوع</a>
</form>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
