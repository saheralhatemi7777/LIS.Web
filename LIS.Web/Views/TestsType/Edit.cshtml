
@model مشروع_ادار_المختبرات.DTOS.DTOAddTestTypes

@{
    ViewData["Title"] = "إضافة نوع تحليل";
}

<h2 class="text-center">إضافة فئة  تحليل جديدة</h2>

    <form asp-action="Edit" method="post" class="mt-4">
         <input type="hidden" asp-for="TestId" />

    <div class="form-group mb-3">
        <label asp-for="TestNameAr" class="form-label">اسم التحليل  بالعربيه</label>
        <input asp-for="TestNameAr" class="form-control" />
        <span asp-validation-for="TestNameAr" class="text-danger"></span>
    </div>

     <div class="form-group mb-3">
        <label asp-for="TestNameEn" class="form-label">اسم التحليل  بالإنجليزية</label>
        <input asp-for="TestNameEn" class="form-control" />
        <span asp-validation-for="TestNameEn" class="text-danger"></span>
    </div>

     <div class="form-group mb-3">
        <label asp-for="SampleType" class="form-label">العينات المطلبوه للتحليل</label>
        <input asp-for="SampleType" class="form-control" />
        <span asp-validation-for="SampleType" class="text-danger"></span>
    </div>

     <div class="form-group mb-3">
        <label asp-for="NormalRange" class="form-label">القيم الطبيعية للتحليل</label>
        <input asp-for="NormalRange" class="form-control" />
        <span asp-validation-for="NormalRange" class="text-danger"></span>
    </div>

     <div class="form-group mb-3">
        <label asp-for="Testprice" class="form-label">رسوم التحليل</label>
        <input asp-for="Testprice" class="form-control" />
        <span asp-validation-for="Testprice" class="text-danger"></span>
    </div>

      <div class="col-md-6">
            <label asp-for="CategoryId" class="form-label" style="float: right;"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.PatientsList" class="form-select text-end">
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">حفظ</button>
    <a asp-action="ShowData" class="btn btn-secondary">رجوع</a>
</form>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
