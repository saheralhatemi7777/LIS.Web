@using System.Text.Json
@{
    Layout = null;
    var doctorsJson = JsonSerializer.Serialize(ViewBag.Doctors);
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إحصائيات المختبرات</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body { font-family: Arial, sans-serif; background-color: #f4f4f4; margin: 0; padding: 20px; }
        .container { max-width: 1200px; margin: auto; background: #fff; padding: 20px; border-radius: 5px; box-shadow: 0 0 10px rgba(0,0,0,0.1);}
        .row { display: flex; justify-content: space-between; margin-bottom: 20px; }
        .card { flex: 1; margin: 0 10px; padding: 20px; background: #e9ecef; border-radius: 5px; text-align: center; }
        h2 { margin-bottom: 15px; }
        canvas { max-width: 100%; }
    </style>
</head>
<body>
    <div class="container">
        <h1>إحصائيات المختبرات</h1>

        <div class="row">
            <div class="card">
                <h2>عدد التحاليل لكل طبيب</h2>
                <canvas id="doctorStatsChart"></canvas>
            </div>
            <div class="card">
                <h2>أكثر التحاليل طلبًا</h2>
                <canvas id="testStatsChart"></canvas>
            </div>
        </div>

        <div class="row">
            <div class="card">
                <h2>معدل زمن الاستجابة</h2>
                <canvas id="responseTimeChart"></canvas>
            </div>
            <div class="card">
                <h2>الإيرادات</h2>
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        const doctors = @Html.Raw(doctorsJson);

        const doctorStatsCtx = document.getElementById('doctorStatsChart').getContext('2d');
        const testStatsCtx = document.getElementById('testStatsChart').getContext('2d');
        const responseTimeCtx = document.getElementById('responseTimeChart').getContext('2d');
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');

        // عدد التحاليل لكل طبيب من قاعدة البيانات
        new Chart(doctorStatsCtx, {
            type: 'bar',
            data: {
                labels: doctors.map(d => d.doctorName),
                datasets: [{
                    label: 'عدد التحاليل المكتملة',
                    data: doctors.map(d => d.activityCount),
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                }]
            },
            options: { responsive: true }
        });

        // البيانات الثابتة لبقية الرسوم
        new Chart(testStatsCtx, {
            type: 'pie',
            data: {
                labels: ['تحليل هرمونات','تحليل التنفس','تحليل البول','تحليل الدم', 'تحليل البول', 'تحليل السكر'],
                datasets: [{
                    label: 'عدد الطلبات',
                    data: [100, 80, 60,50,30,20],
                    backgroundColor: ['rgba(75, 192, 192, 0.6)', 'rgba(255, 99, 132, 0.6)', 'rgba(50, 206, 86, 0.6)', 'rgba(20, 100, 86, 0.6)', 'rgba(100, 120, 86, 0.6)', 'rgba(59, 155, 86, 0.6)'],
                }]
            },
            options: { responsive: true }
        });

        new Chart(responseTimeCtx, {
            type: 'line',
            data: {
                labels: ['يناير', 'فبراير', 'مارس', 'أبريل', 'مايو'],
                datasets: [{
                    label: 'زمن الاستجابة (دقائق)',
                    data: [30, 25, 20, 35, 15],
                    borderColor: 'rgba(255, 159, 64, 1)',
                    fill: false,
                }]
            },
            options: { responsive: true }
        });

        new Chart(revenueCtx, {
            type: 'doughnut',
            data: {
                labels: ['إيرادات التحاليل', 'تكاليف أخرى'],
                datasets: [{
                    label: 'الإيرادات',
                    data: [2000, 500],
                    backgroundColor: ['rgba(153, 102, 255, 0.6)', 'rgba(255, 99, 132, 0.6)'],
                }]
            },
            options: { responsive: true }
        });
    </script>
</body>
</html>
